# Environment Configuration - Local Development
# Copy this file to .env and fill in your values

# Environment
APP_ENV=local
DEV_BYPASS_AUTH=false  # Set to true ONLY for local development if needed

# Database (Supabase or local PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/cybercafe_pos

# Redis (optional for caching)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-jwt-key-min-32-characters-long-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Application
APP_NAME=CyberCafe POS Pro
APP_VERSION=1.0.0
DEBUG=true

# M-Pesa Daraja (Sandbox for local development)
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_passkey
MPESA_ENVIRONMENT=sandbox
MPESA_CALLBACK_URL=https://your-ngrok-url.ngrok.io/mpesa/callback
MPESA_ALLOWED_IPS=  # Leave empty for local development

# File Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_TYPES=application/pdf,image/jpeg,image/png,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Health Check
HEALTH_CHECK_TOKEN=  # Optional
